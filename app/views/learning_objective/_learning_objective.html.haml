- link ||= nil #we don't always get a undo/redo link
#panel{:class => ["panel", lo.pending == true ? "pending":""]}
  %span#category_new= lo.category.first.upcase
  - if lo.pending?
    %p#pending
      = I18n.t('learning_objective.general.labels.proposed')
      = link_to I18n.t('learning_objective.general.labels.approve'), update_lo_url(lo.id, :pending => 'false'), :remote => true, :method => :put
  - unless link.nil?
    %p= link.html_safe
  %p#brief= lo.brief
  %span#category= lo.category.upcase
  %span#discipline= lo.discipline.upcase
  .pad