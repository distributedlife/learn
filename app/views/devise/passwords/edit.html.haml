.container
  .content
    =render :partial => '/common/page_header', :locals => {:title => t('titles.user-change-password.title'), :subtitle => t('titles.user-change-password.subtitle')}
    .row
      .span16
        - semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
          .clearfix
            = f.hidden_field :reset_password_token
          .clearfix
            = f.input :password, :as => :password, :label => I18n.t('form.user-password')
          .clearfix
            = f.input :password_confirmation, :as => :password, :label => I18n.t('form.user-confirm-password')
          .actions
            .input
              = f.submit I18n.t('actions.change-password'), :class => 'btn primary'